<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">


        <data>
            <variable
                name="lisitems"
                type="com.example.devcommunity.model.User" />

            <variable
                name="user"
                type="com.example.devcommunity.login.LoginViewModel" />

        </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp">

        <de.hdodenhof.circleimageview.CircleImageView
           android:id="@+id/dp"
            tools:src="@tools:sample/avatars[0]"
            android:layout_width="50dp"
            android:layout_height="50dp"/>

        <LinearLayout
            android:layout_width="0dp"
                android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                style="@style/TextAppearance.AppCompat"
                android:id="@+id/friendNameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Friend's Name"
                android:textSize="16sp" />
            <TextView
                android:layout_marginTop="5dp"
                android:id="@+id/friendCollageTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="collage name"
                android:textSize="12sp" />
        </LinearLayout>

        <Button
            android:id="@+id/inviteButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Invite" />

    </LinearLayout>

</layout>